<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Wazzy</Title>
    <Version>0.0.3</Version>
    <Authors>Martin Evans</Authors>
    <Description>A pure C# implementation of WASI</Description>
    <PackageProjectUrl>https://github.com/martindevans/Wazzy</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Wasmtime" Version="14.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Interop\" />
    <Folder Include="Extensions\" />
  </ItemGroup>

</Project>
